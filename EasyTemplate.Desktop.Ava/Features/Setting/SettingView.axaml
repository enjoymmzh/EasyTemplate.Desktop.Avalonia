<UserControl
    x:Class="EasyTemplate.Ava.Features.SettingView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:objectModel="clr-namespace:System.Collections.ObjectModel;assembly=System.ObjectModel"
    xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <suki:SettingsLayout>
        <suki:SettingsLayout.Items>
            <objectModel:ObservableCollection x:TypeArguments="suki:SettingsLayoutItem">
                <suki:SettingsLayoutItem Header="主题">
                    <suki:SettingsLayoutItem.Content>
                        <Border Height="300" Background="LightGray" />
                    </suki:SettingsLayoutItem.Content>
                </suki:SettingsLayoutItem>

                <suki:SettingsLayoutItem Header="颜色">
                    <suki:SettingsLayoutItem.Content>
                        <Border Height="300" Background="LightGray" />
                    </suki:SettingsLayoutItem.Content>
                </suki:SettingsLayoutItem>

                <suki:SettingsLayoutItem Header="Settings Part 3">
                    <suki:SettingsLayoutItem.Content>
                        <Border Height="300" Background="LightGray" />
                    </suki:SettingsLayoutItem.Content>
                </suki:SettingsLayoutItem>
            </objectModel:ObservableCollection>
        </suki:SettingsLayout.Items>
    </suki:SettingsLayout>
</UserControl>
